{
  "name": "My Translation",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "config/config.js",
      "background/script.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "vendor/jquery.min.js",
        "vendor/jquery-ui.min.js",
        "utils/translator.js",
        "scripts/common/script.js"
      ],
      "css": [
        "scripts/common/style.css"
      ],
      "all_frames": true
    },
    {
      "matches": [
        "https://translate.google.com/*",
        "https://translate.google.co.jp/*"
      ],
      "js": [
        "vendor/jquery.min.js",
        "utils/translator.js",
        "scripts/google/script.js"
      ]
    },
    {
      "matches": [
        "https://www.deepl.com/*"
      ],
      "js": [
        "vendor/jquery.min.js",
        "utils/translator.js",
        "scripts/deepl/script.js"
      ]
    },
    {
      "matches": [
        "https://www.dropbox.com/*"
      ],
      "js": [
        "vendor/jquery.min.js",
        "utils/translator.js",
        "scripts/dropbox/script.js"
      ],
      "css": [
        "scripts/dropbox/style.css"
      ]
    }
  ]
}
